<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Style TargetType="Frame" x:Key="TableEntryFrame">
        <Setter Property="Margin" Value="5,2,5,2"/>
        <Setter Property="Padding" Value="8"/>
        <Setter Property="BackgroundColor" 
                Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray900}}"/>
        <Setter Property="BorderColor" Value="DarkGrey"/>
    </Style>
    <Style TargetType="Entry" x:Key="NumericEntry">
        <Setter Property="Keyboard" Value="Numeric"/>
        <Setter Property="MaxLength" Value="8"/>
        <Setter Property="ClearButtonVisibility" Value="Never"/>
    </Style>

    <x:Boolean x:Key="BooleanTrue">
        True
    </x:Boolean>
    <x:Boolean x:Key="BooleanFalse">
        False
    </x:Boolean>
</ResourceDictionary>