<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:FarmOrganizer.ViewModels"
             x:Class="FarmOrganizer.Views.MainPage"
             x:DataType="viewmodel:MainPageViewModel"
             Title="Menu główne">
    <Grid 
        ColumnDefinitions="*, *"
        RowDefinitions="0.2*, *, *, *"
        Margin="10,10,10,10" 
        ColumnSpacing="6"
        RowSpacing="6" >

        <Entry
            Grid.ColumnSpan="2"
            Placeholder="Text goes here"
            Text="{Binding SomeText}"/>
        
        <Button 
            Grid.Row="1" 
            Text="Clear Entry"
            Command="{Binding ChangeTextCommand}"/>
        <Button 
            Grid.Row="2" 
            Text="Open Quick Calc" 
            Command="{Binding OpenPageCommand}"
            CommandParameter="QuickCalculator"/>
        <Button 
            x:Name="DisableThatFuck"
            Grid.Row="3" 
            Text="Holy shit" 
            IsEnabled="{Binding IsToggled, Source={x:Reference TheFunnySwitch}}"/>
        
        <Button 
            Grid.Column="1" 
            Grid.Row="1"  
            Text="PLACEHOLDER" />
        <Button
            Grid.Column="1" 
            Grid.Row="2" 
            Text="PLACEHOLDER" />
        <Switch x:Name="TheFunnySwitch"
                Grid.Column="1"
                Grid.Row="3"/>
    </Grid>
</ContentPage>