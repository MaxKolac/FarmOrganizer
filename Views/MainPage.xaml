<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:FarmOrganizer.ViewModels"
             x:Class="FarmOrganizer.Views.MainPage"
             x:DataType="viewmodel:MainPageViewModel"
             Title="Menu główne">
    <Grid 
        ColumnDefinitions="*, *"
        RowDefinitions="*, *, *"
        Margin="10" 
        ColumnSpacing="6"
        RowSpacing="6" >

        <Button 
            Grid.Row="0"
            Grid.Column="0"
            Text="Tabela kosztów"
            Command="{Binding OpenPageCommand}"
            CommandParameter="LedgerPage"/>
        <Button 
            Grid.Row="0" 
            Grid.Column="1"
            Text="Szybki kalkulator" 
            Command="{Binding OpenPageCommand}"
            CommandParameter="QuickCalculator"/>
        <!--<Button 
            x:Name="DisableThatFuck"
            Grid.Row="3" 
            Text="Holy shit" 
            IsEnabled="{Binding IsToggled, Source={x:Reference TheFunnySwitch}}"/>-->
        
        <Button 
            Grid.Row="1"  
            Grid.Column="0" 
            Text="DEBUG PAGE" 
            Command="{Binding OpenPageCommand}"
            CommandParameter="DebugPage"/>
        <Button
            Grid.Row="1" 
            Grid.Column="1" 
            Text="PLACEHOLDER" />
        <!--<Switch x:Name="TheFunnySwitch"
                Grid.Column="1"
                Grid.Row="3"/>-->
    </Grid>
</ContentPage>