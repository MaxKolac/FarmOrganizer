<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodel="clr-namespace:FarmOrganizer.ViewModels"
             x:Class="FarmOrganizer.Views.ReportPage"
             x:DataType="viewmodel:ReportPageViewModel"
             Title="Szybki kalkulator">
    <ContentPage.Resources>
        <Style TargetType="Label">
            <Setter Property="HorizontalTextAlignment" Value="Start"/>
            <Setter Property="VerticalTextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="Medium"/>
            <Setter Property="FontAttributes" Value="Bold"/>
        </Style>
        <Style TargetType="Entry">
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
            <Setter Property="Keyboard" Value="Numeric"/>
            <Setter Property="ClearButtonVisibility" Value="WhileEditing"/>
            <Setter Property="FontSize" Value="Medium"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="IsEnabled" Value="False"/>
        </Style>
        <Style TargetType="HorizontalStackLayout">
            <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Margin="10">
        <Label Text="Dwie ostatnio kliknięte liczby (oznaczone ptaszkiem) są użyte do obliczenia trzeciej.Po wpisaniu liczby, wciśnij OK aby ją zatwierdzić."
               HorizontalTextAlignment="Center"
               Margin="10"
               FontSize="18"/>

        <Label Text="Ilość plonów (kg):"/>
        <HorizontalStackLayout>
            <Entry x:Name="cropAmount"
               Text="{Binding CropAmountValue}"
               ReturnCommand="{Binding TextChangedCommand}">
                <Entry.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LastTappedControlsChangedCommand}" 
                                          CommandParameter="cropAmount"/>
                </Entry.GestureRecognizers>
            </Entry>
            <CheckBox IsChecked="{Binding CropAmountFocused}"/>
        </HorizontalStackLayout>

        <Label Text="Cena za kilogram (zł):"/>
        <HorizontalStackLayout>
            <Entry x:Name="sellRate"
               Text="{Binding SellRateValue}"
               ReturnCommand="{Binding TextChangedCommand}">
                <Entry.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LastTappedControlsChangedCommand}" 
                                      CommandParameter="sellRate"/>
                </Entry.GestureRecognizers>
            </Entry>
            <CheckBox IsChecked="{Binding SellRateFocused}"/>
        </HorizontalStackLayout>

        <Label Text="Zysk ze sprzedaży (zł):"/>
        <HorizontalStackLayout>
            <Entry x:Name="pureIncome"
               Text="{Binding PureIncomeValue}"
               ReturnCommand="{Binding TextChangedCommand}">
                <Entry.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding LastTappedControlsChangedCommand}" 
                                          CommandParameter="pureIncome"/>
                </Entry.GestureRecognizers>
            </Entry>
            <CheckBox IsChecked="{Binding PureIncomeFocused}"/>
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>